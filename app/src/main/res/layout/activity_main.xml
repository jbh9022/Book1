<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/backColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/main_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <pyxis.uzuki.live.rollingbanner.RollingViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

        <pyxis.uzuki.live.rollingbanner.RollingBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:bottomMargin="@dimen/default_bottom_margin"
            app:enableIndicator="true"
            app:enableLooping="true"
            app:enableRolling="true"
            app:flingAble="true"
            app:indicatorMargin="@dimen/default_indicator_margin"
            app:indicatorRes="@drawable/default_indicator"
            app:rollingDelay="3000"
            app:scrollingDelay="250"
            app:smoothScroll="true" />
</FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/main_text1"
                    android:gravity="center|start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="12312321asdasdasdasdsadasdasdasdasdasdsadsaasda"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/main_userTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="AAA님 환영합니다."
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:paddingRight="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/main_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="2dp">
            <TextView
                android:id="@+id/main_loginTxt"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="로그인"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/roundlayout"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        //좌석 현황
        <ImageView
            android:id="@+id/main_img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_set"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        //회원정보
        <ImageView
            android:id="@+id/main_img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_user"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    //이용안내
                    <ImageView
                        android:id="@+id/main_img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_use"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    //카페주문
                    <ImageView
                        android:id="@+id/main_img4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_cafe"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
    </LinearLayout>

</LinearLayout>